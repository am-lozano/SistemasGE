@model Domain.Entities.Departamento

@{
    ViewData["Title"] = "Eliminar Departamento";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">

        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Confirmar Eliminación</h5>
            </div>

            <div class="card-body">
                <p class="fs-5 text-center">
                    ¿Estás seguro de que deseas eliminar el siguiente departamento?
                </p>

                <dl class="row mt-4">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.IdDepartamento</dd>

                    <dt class="col-sm-4">Departamento</dt>
                    <dd class="col-sm-8 fw-bold text-danger">
                        @Model.NombreDepartamento
                    </dd>
                </dl>

                <p class="text-muted text-center mt-3">
                    Esta acción no se puede deshacer.
                </p>

                <form asp-action="Delete" method="post" class="mt-4">
                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-danger px-4">
                            Eliminar
                        </button>

                        <a asp-action="Index" class="btn btn-secondary px-4">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
