@model List<Domain.Entities.Departamento>

@{
    ViewData["Title"] = "Listado de Departamentos";
}

<h1 class="mb-4 text-primary text-center">@ViewData["Title"]</h1>

<!-- Botón para crear un nuevo departamento -->
<div class="mb-4 text-end">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Crear Nuevo Departamento
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th>Nombre del Departamento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var departamento in Model)
            {
                <tr>
                    <td class="text-center fw-bold">@departamento.NombreDepartamento</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@departamento.IdDepartamento" class="btn btn-sm btn-primary me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@departamento.IdDepartamento" class="btn btn-sm btn-info text-white me-1">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@departamento.IdDepartamento" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
