@model Domain.Entities.Departamento

@{
    ViewData["Title"] = "Editar Departamento";
}

<h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">

        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Modificar Departamento</h5>
            </div>

            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- ID -->
                    <div class="mb-3">
                        <label asp-for="IdDepartamento" class="form-label"></label>
                        <input asp-for="IdDepartamento" class="form-control" readonly />
                        <span asp-validation-for="IdDepartamento" class="text-danger"></span>
                    </div>

                    <!-- Nombre -->
                    <div class="mb-4">
                        <label asp-for="NombreDepartamento" class="form-label"></label>
                        <input asp-for="NombreDepartamento"
                               class="form-control"
                               placeholder="Nombre del departamento" />
                        <span asp-validation-for="NombreDepartamento" class="text-danger"></span>
                    </div>

                    <!-- Botones -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            Volver
                        </a>

                        <button type="submit" class="btn btn-success">
                            Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
