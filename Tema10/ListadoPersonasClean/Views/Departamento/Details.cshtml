@model Domain.Entities.Departamento

@{
    ViewData["Title"] = "Detalles del Departamento";
}

<h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Información del Departamento</h5>
            </div>

            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.IdDepartamento</dd>

                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8 fw-bold">
                        @Model.NombreDepartamento
                    </dd>
                </dl>
            </div>

            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    Volver
                </a>

                <a asp-action="Edit"
                   asp-route-id="@Model.IdDepartamento"
                   class="btn btn-primary">
                    Editar
                </a>
            </div>
        </div>

    </div>
</div>
