@model Domain.DTOs.PersonaWithNombreDepartamentoDTO

@{
    ViewData["Title"] = "Eliminar Persona";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">

        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Confirmar Eliminación</h5>
            </div>

            <div class="card-body text-center">
                <p class="fs-5">
                    ¿Estás seguro de que deseas eliminar a la persona:
                </p>

                <p class="fw-bold fs-4 text-danger">
                    @Model.persona.Nombre @Model.persona.Apellidos
                </p>

                <p class="text-muted">
                    Esta acción no se puede deshacer.
                </p>

                <form method="post" class="mt-4">
                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-danger px-4">
                            Eliminar
                        </button>

                        <a asp-action="Index" class="btn btn-secondary px-4">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
