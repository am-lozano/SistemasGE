@model List<Domain.DTOs.PersonaWithNombreDepartamentoDTO>

@{
    ViewData["Title"] = "Listado de Personas";
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h5 mb-0">Personas</h2>
            <div class="d-flex gap-2">
                <input id="searchBox" class="form-control form-control-sm" placeholder="Buscar por nombre..." style="min-width:220px" />
                <a class="btn btn-sm btn-primary" asp-action="Create">Nueva Persona</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:6%">Id</th>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                        <th>Fecha Nac.</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th>Departamento</th>
                        <th style="width:14%">Acciones</th>
                    </tr>
                </thead>
                <tbody id="personasTableBody">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var dto in Model)
                        {
                            <tr>
                                <td>@dto.persona.Id</td>
                                <td>@dto.persona.Nombre</td>
                                <td>@dto.persona.Apellidos</td>
                                <td>@dto.persona.FechaNac.ToString("dd/MM/yyyy")</td>
                                <td>@dto.persona.Direccion</td>
                                <td>@dto.persona.Telefono</td>
                                <td><span class="badge bg-success">@dto.nombreDepartamento</span></td>
                                <td class="table-actions">
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@dto.persona.Id">Editar</a>
                                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@dto.persona.Id">Detalles</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@dto.persona.Id">Eliminar</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">No hay personas para mostrar.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Búsqueda simple (cliente) — mejora UX sin tocar servidor
        (function () {
            const box = document.getElementById('searchBox');
            const tbody = document.getElementById('personasTableBody');
            box.addEventListener('input', function () {
                const q = box.value.trim().toLowerCase();
                if (!tbody) return;
                for (const row of tbody.querySelectorAll('tr')) {
                    const text = row.innerText.toLowerCase();
                    row.style.display = q === '' || text.includes(q) ? '' : 'none';
                }
            });
        })();
    </script>
}
