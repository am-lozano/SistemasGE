@model List<Domain.DTOs.PersonaWithNombreDepartamentoDTO>

@{
    ViewData["Title"] = "Listado de Personas";
}

<h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

<!-- Botón crear -->
<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus"></i> Crear Nueva Persona
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Fecha Nac.</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Foto</th>
                <th>Departamento</th>
                <th style="width: 180px;">Acciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var personaDTO in Model)
            {
                <tr class="text-center">
                    <td>@personaDTO.persona.Nombre</td>
                    <td>@personaDTO.persona.Apellidos</td>
                    <td>
                        @personaDTO.persona.FechaNac.ToString("dd/MM/yyyy")
                    </td>
                    <td>@personaDTO.persona.Direccion</td>
                    <td>@personaDTO.persona.Telefono</td>

                    <td>
                        @if (!string.IsNullOrEmpty(personaDTO.persona.Foto))
                        {
                            <img src="@personaDTO.persona.Foto"
                                 class="img-thumbnail"
                                 style="width: 80px; height: 80px; object-fit: cover;"
                                 alt="Foto" />
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No disponible</span>
                        }
                    </td>

                    <td>
                        <span class="badge bg-info text-dark">
                            @personaDTO.nombreDepartamento
                        </span>
                    </td>

                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Edit"
                               asp-route-id="@personaDTO.persona.Id"
                               class="btn btn-warning">
                                Editar
                            </a>
                            <a asp-action="Details"
                               asp-route-id="@personaDTO.persona.Id"
                               class="btn btn-primary">
                                Detalles
                            </a>
                            <a asp-action="Delete"
                               asp-route-id="@personaDTO.persona.Id"
                               class="btn btn-danger">
                                Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
