@model Domain.Entities.Persona

@{
    ViewData["Title"] = "Editar Persona";
}

<h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">

        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Modificar Datos</h5>
            </div>

            <div class="card-body">
                <form method="post">

                    <div class="row">
                        <!-- Nombre -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text"
                                   class="form-control"
                                   name="Nombre"
                                   value="@Model.Nombre" />
                        </div>

                        <!-- Apellidos -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Apellidos</label>
                            <input type="text"
                                   class="form-control"
                                   name="Apellidos"
                                   value="@Model.Apellidos" />
                        </div>

                        <!-- Fecha nacimiento -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Fecha de Nacimiento</label>
                            <input type="date"
                                   class="form-control"
                                   name="FechaNac"
                                   value="@Model.FechaNac.ToString("yyyy-MM-dd")" />
                        </div>

                        <!-- Teléfono -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Teléfono</label>
                            <input type="text"
                                   class="form-control"
                                   name="Telefono"
                                   value="@Model.Telefono" />
                        </div>

                        <!-- Dirección -->
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Dirección</label>
                            <input type="text"
                                   class="form-control"
                                   name="Direccion"
                                   value="@Model.Direccion" />
                        </div>

                        <!-- Foto -->
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Foto (URL)</label>
                            <input type="text"
                                   class="form-control"
                                   name="Foto"
                                   value="@Model.Foto"
                                   placeholder="https://..." />
                        </div>

                        <!-- Departamento -->
                        <div class="col-md-12 mb-4">
                            <label class="form-label">Departamento</label>
                            <select class="form-select" name="IdDepartamento">
                                @foreach (var departamento in ViewBag.Departamentos)
                                {
                                    <option value="@departamento.IdDepartamento"
                                            selected="@(departamento.IdDepartamento == Model.IdDepartamento)">
                                        @departamento.NombreDepartamento
                                    </option>
                                }
                            </select>
                        </div>
                    </div>

                    <!-- Botones -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            Volver
                        </a>

                        <button type="submit" class="btn btn-success">
                            Guardar Cambios
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
