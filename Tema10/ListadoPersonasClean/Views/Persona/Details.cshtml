@model Domain.DTOs.PersonaWithNombreDepartamentoDTO

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-person-badge"></i> Detalles de la Persona
            </h4>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">
                    @Html.DisplayNameFor(model => model.nombreDepartamento)
                </dt>
                <dd class="col-sm-8 fw-bold">
                    @Html.DisplayFor(model => model.nombreDepartamento)
                </dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Edit" class="btn btn-warning me-2">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>
</div>