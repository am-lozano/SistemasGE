@model Domain.DTOs.PersonaWithNombreDepartamentoDTO

@{
    ViewData["Title"] = "Detalles de Persona";
}

<h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Información Personal</h5>
            </div>

            <div class="card-body">
                <div class="row">

                    <!-- Foto -->
                    <div class="col-md-4 text-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.persona.Foto))
                        {
                            <img src="@Model.persona.Foto"
                                 class="img-thumbnail rounded-circle"
                                 style="width: 180px; height: 180px; object-fit: cover;"
                                 alt="Foto" />
                        }
                        else
                        {
                            <div class="text-muted fst-italic">
                                Foto no disponible
                            </div>
                        }
                    </div>

                    <!-- Datos -->
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">Nombre</dt>
                            <dd class="col-sm-8">@Model.persona.Nombre</dd>

                            <dt class="col-sm-4">Apellidos</dt>
                            <dd class="col-sm-8">@Model.persona.Apellidos</dd>

                            <dt class="col-sm-4">Fecha Nac.</dt>
                            <dd class="col-sm-8">
                                @Model.persona.FechaNac.ToString("dd/MM/yyyy")
                            </dd>

                            <dt class="col-sm-4">Dirección</dt>
                            <dd class="col-sm-8">@Model.persona.Direccion</dd>

                            <dt class="col-sm-4">Teléfono</dt>
                            <dd class="col-sm-8">@Model.persona.Telefono</dd>

                            <dt class="col-sm-4">Departamento</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info text-dark">
                                    @Model.nombreDepartamento
                                </span>
                            </dd>
                        </dl>
                    </div>

                </div>
            </div>

            <!-- Botones -->
            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    Volver al Listado
                </a>

                <a asp-action="Edit"
                   asp-route-id="@Model.persona.Id"
                   class="btn btn-primary">
                    Editar
                </a>
            </div>
        </div>

    </div>
</div>
